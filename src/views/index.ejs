<style>
/* Home Page Specific Styles */

/* How It Works Section */
.how-it-works {
  padding: var(--spacing-xxl) 0;
  background-color: var(--background-off);
}

.steps {
  margin-top: var(--spacing-xl);
}

.step {
  display: flex;
  margin-bottom: var(--spacing-xl);
  position: relative;
}

.step:last-child {
  margin-bottom: 0;
}

.step:not(:last-child)::after {
  content: '';
  position: absolute;
  top: 60px;
  left: 40px;
  bottom: -40px;
  width: 2px;
  background-color: var(--primary-light);
}

.step-number {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80px;
  height: 80px;
  background-color: var(--primary-color);
  color: white;
  font-size: 2rem;
  font-weight: 700;
  border-radius: 50%;
  margin-right: var(--spacing-lg);
  z-index: 1;
}

.step-content {
  flex: 1;
  padding-top: var(--spacing-sm);
}

.step-title {
  margin-bottom: var(--spacing-sm);
  font-size: 1.25rem;
}

/* Testimonials Section */
.testimonials {
  padding: var(--spacing-xxl) 0;
  background-color: white;
}

.testimonials-slider {
  display: flex;
  gap: var(--spacing-xl);
  flex-wrap: wrap;
  margin-top: var(--spacing-xl);
}

.testimonial {
  flex: 1;
  min-width: 300px;
  background-color: var(--background-off);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
}

.testimonial-content {
  margin-bottom: var(--spacing-md);
  font-style: italic;
  color: var(--text-medium);
  line-height: 1.6;
}

.testimonial-content p {
  margin: 0;
}

.testimonial-author {
  display: flex;
  align-items: center;
}

.author-image {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  object-fit: cover;
  margin-right: var(--spacing-sm);
}

.author-info h4 {
  margin: 0;
  font-size: 1rem;
}

.author-info p {
  margin: 0;
  color: var(--text-medium);
  font-size: 0.875rem;
}

/* Responsive Adjustments */
@media (max-width: 767px) {
  .step {
    flex-direction: column;
  }
  
  .step-number {
    margin-bottom: var(--spacing-md);
  }
  
  .step:not(:last-child)::after {
    left: 40px;
    top: 80px;
    width: 2px;
    height: calc(100% - 40px);
  }
  
  .testimonials-slider {
    flex-direction: column;
  }
}
</style>
