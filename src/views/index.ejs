                    <div class="trip-meta">
                        <span><i class="fas fa-heart"></i> 312</span>
                        <span><i class="fas fa-eye"></i> 1.5k</span>
                        <span><i class="fas fa-clone"></i> 45</span>
                    </div>
                    <a href="/trip/sample-3" class="btn btn-outline btn-block">View Trip</a>
                </div>
            </div>
        </div>
        <div class="text-center mt-4">
            <a href="/trips/explore" class="btn btn-primary">Explore More Trips</a>
        </div>
    </div>
</section>

