<%- contentFor('body') %>

<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">Plan Your Perfect Trip with MixTrip</h1>
            <p class="hero-subtitle">Create, share, and discover amazing travel itineraries</p>
            <div class="hero-buttons">
                <a href="/trips/create" class="btn btn-primary btn-lg">Create a Trip</a>
                <a href="/trips/explore" class="btn btn-outline btn-lg">Explore Trips</a>
            </div>
        </div>
        <div class="hero-image">
            <img src="/images/hero-image.jpg" alt="Travel Planning">
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features">
    <div class="container">
        <h2 class="section-title">Why Choose MixTrip</h2>
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-map-marked-alt"></i>
                </div>
                <h3 class="feature-title">Easy Trip Planning</h3>
                <p class="feature-desc">Create detailed travel itineraries with our intuitive planning tools</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-share-alt"></i>
                </div>
                <h3 class="feature-title">Share & Collaborate</h3>
                <p class="feature-desc">Share your trips with friends and family or make them public</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-lightbulb"></i>
                </div>
                <h3 class="feature-title">Get Inspired</h3>
                <p class="feature-desc">Discover amazing trips created by our global community</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-route"></i>
                </div>
                <h3 class="feature-title">Interactive Maps</h3>
                <p class="feature-desc">Visualize your journey with interactive maps and directions</p>
            </div>
        </div>
    </div>
</section>

<!-- Popular Destinations -->
<section class="destinations">
    <div class="container">
        <h2 class="section-title">Popular Destinations</h2>
        <div class="destinations-grid">
            <div class="destination-card">
                <img src="/images/destinations/bangkok.jpg" alt="Bangkok" class="destination-image">
                <div class="destination-overlay">
                    <h3>Bangkok</h3>
                    <p>Thailand</p>
                    <a href="/trips/explore?location=Bangkok" class="btn btn-sm btn-light">Explore</a>
                </div>
            </div>
            <div class="destination-card">
                <img src="/images/destinations/chiang-mai.jpg" alt="Chiang Mai" class="destination-image">
                <div class="destination-overlay">
                    <h3>Chiang Mai</h3>
                    <p>Thailand</p>
                    <a href="/trips/explore?location=Chiang+Mai" class="btn btn-sm btn-light">Explore</a>
                </div>
            </div>
            <div class="destination-card">
                <img src="/images/destinations/phuket.jpg" alt="Phuket" class="destination-image">
                <div class="destination-overlay">
                    <h3>Phuket</h3>
                    <p>Thailand</p>
                    <a href="/trips/explore?location=Phuket" class="btn btn-sm btn-light">Explore</a>
                </div>
            </div>
            <div class="destination-card">
                <img src="/images/destinations/krabi.jpg" alt="Krabi" class="destination-image">
                <div class="destination-overlay">
                    <h3>Krabi</h3>
                    <p>Thailand</p>
                    <a href="/trips/explore?location=Krabi" class="btn btn-sm btn-light">Explore</a>
                </div>
            </div>
        </div>
        <div class="text-center mt-4">
            <a href="/trips/explore" class="btn btn-outline">View All Destinations</a>
        </div>
    </div>
</section>

<!-- Featured Trips -->
