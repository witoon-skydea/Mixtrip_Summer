<%- contentFor('body') %>

<div class="auth-page">
  <div class="container">
    <div class="auth-container">
      <div class="auth-box">
        <div class="auth-header">
          <h1 class="auth-title">Email Sent</h1>
          <p class="auth-subtitle">Password reset instructions have been sent</p>
        </div>
        
        <div class="success-message">
          <div class="success-icon">
            <i class="fas fa-check-circle"></i>
          </div>
          
          <div class="success-text">
            <p><%= message || 'If your email exists in our database, you will receive a password reset link shortly.' %></p>
            <p>Please check your email and follow the instructions to reset your password.</p>
            <p>If you don't receive an email within a few minutes, please check your spam folder or try again.</p>
          </div>
          
          <div class="auth-alt">
            <p><a href="/auth/login">Return to Login</a></p>
          </div>
        </div>
      </div>
      
      <div class="auth-image">
        <img src="/images/auth/email-sent.jpg" alt="Email Sent Image">
      </div>
    </div>
  </div>
</div>
