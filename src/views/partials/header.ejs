<header class="header">
    <div class="container">
        <div class="header-wrapper">
            <!-- Logo -->
            <div class="logo">
                <a href="/">
                    <img src="/images/mixtrip-logo.png" alt="MixTrip Summer Logo">
                    <span>MixTrip</span>
                </a>
            </div>
            
            <!-- Navigation -->
            <nav class="main-nav">
                <ul class="nav-list">
                    <li class="nav-item"><a href="/" class="nav-link">Home</a></li>
                    <li class="nav-item"><a href="/trips/explore" class="nav-link">Explore</a></li>
                    <% if (typeof user !== 'undefined' && user) { %>
                        <li class="nav-item"><a href="/trips/create" class="nav-link">Create Trip</a></li>
                    <% } %>
                    <li class="nav-item"><a href="/about" class="nav-link">About</a></li>
                </ul>
            </nav>
            
            <!-- Auth or User Menu -->
            <div class="auth-menu">
                <% if (typeof user !== 'undefined' && user) { %>
                    <div class="user-dropdown">
                        <button class="user-dropdown-btn">
                            <img src="/images/default-profile.png" alt="User Profile" class="user-avatar">
                            <span><%= user.username %></span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="user-dropdown-content">
                            <a href="/profile"><i class="fas fa-user"></i> Profile</a>
                            <a href="/trips/my-trips"><i class="fas fa-route"></i> My Trips</a>
                            <a href="/notifications"><i class="fas fa-bell"></i> Notifications</a>
                            <a href="/settings"><i class="fas fa-cog"></i> Settings</a>
                            <div class="dropdown-divider"></div>
                            <a href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                        </div>
                    </div>
                <% } else { %>
                    <div class="auth-buttons">
                        <a href="/auth/login" class="btn btn-outline">Login</a>
                        <a href="/auth/register" class="btn btn-primary">Sign Up</a>
                    </div>
                <% } %>
            </div>
            
            <!-- Mobile Menu Toggle -->
            <button class="mobile-menu-toggle">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </button>
        </div>
    </div>
    
    <!-- Mobile Menu (hidden by default) -->
    <div class="mobile-menu">
        <ul class="mobile-nav-list">
            <li class="mobile-nav-item"><a href="/" class="mobile-nav-link">Home</a></li>
            <li class="mobile-nav-item"><a href="/trips/explore" class="mobile-nav-link">Explore</a></li>
            <% if (typeof user !== 'undefined' && user) { %>
                <li class="mobile-nav-item"><a href="/trips/create" class="mobile-nav-link">Create Trip</a></li>
                <li class="mobile-nav-item"><a href="/profile" class="mobile-nav-link">Profile</a></li>
                <li class="mobile-nav-item"><a href="/trips/my-trips" class="mobile-nav-link">My Trips</a></li>
                <li class="mobile-nav-item"><a href="/notifications" class="mobile-nav-link">Notifications</a></li>
                <li class="mobile-nav-item"><a href="/settings" class="mobile-nav-link">Settings</a></li>
                <li class="mobile-nav-item"><a href="/auth/logout" class="mobile-nav-link">Logout</a></li>
            <% } else { %>
                <li class="mobile-nav-item"><a href="/auth/login" class="mobile-nav-link">Login</a></li>
                <li class="mobile-nav-item"><a href="/auth/register" class="mobile-nav-link">Sign Up</a></li>
            <% } %>
            <li class="mobile-nav-item"><a href="/about" class="mobile-nav-link">About</a></li>
        </ul>
    </div>
</header>
